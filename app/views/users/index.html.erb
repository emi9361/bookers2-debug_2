<div class = "body">
	<div class= "container" >
		<div class="row">
			<div class="col-xs-3">

			<h2>User info</h2>
		<%= render 'users/profile', user: current_user %>
		<!--メモ　右側の指定に注意。そこを間違えるとエラーが発生して表示されない -->

			<h2>New book</h2>
		<%= render 'books/newform', book: @book %>

		</div>

		<div class="col-xs-9">
			<h2>Users</h2>
		<!--users一覧 -->
			<table class="table">
				<thead>
					<tr>
						<th>image</th>
						<th>name</th>
						<th colspan="3"></th>
					</tr>
				</thead>

				<tbody>
				  <% @users.each do |user| %>
					<tr>
						<td><%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %></td>
						<td><%= user.name%></td>
						<td><%= link_to "Show", user, class: "user_#{user.id}" %></td>

					    <td>フォロー数</td>
					    <td><%= link_to following_user_path(user) do %>
					    	<%= user.followings.count %>
					    	<% end %>
						</td>

						<td>フォロワー数</td>
				    	<td><%= link_to followers_user_path(user) do %>
				      		<%= user.followers.count %>
						    <% end %>
						</td>

						<td>
							<% unless user.id == current_user.id %>
							  <%if @relationship.empty? %>
				                <%= button_to "フォローする", relationships_path({follow_id: user.id}),method: :post %>
				              <% else %>
			  	  			    <%= button_to "フォロー外す", relationship_path({follow_id: user.id}), method: :delete %>
			  				  <% end %>
			  				<% end %>
			  			</td>
					</tr>
				  <% end %>
				</tbody>
			</table>
	</div>
		<!--users一覧 -->
